mysql> insert into marks(Roll_no,Sub_code,marks) values(101,401,90),(102,402,85),(103,403,70),(104,404,50);
Query OK, 4 rows affected (0.253 sec)
Records: 4  Duplicates: 0  Warnings: 0

mysql> select s.Roll_No,s.Name, AVG(m.Marks) as Avg_Marks from Student s join Marks m on s.Roll_No = m.Roll_no group by s.Roll_No,s.Name;
