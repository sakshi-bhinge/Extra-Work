mysql> select s.Roll_No,s.Name, AVG(m.Marks) as Avg_Marks from Student s join Marks m on s.Roll_No = m.Roll_no group by s.Roll_No,s.Name;
Empty set (0.226 sec)

mysql> insert into student(Roll_no,Name,Address) values(101,'Pallavi','Nashik'),(102,'Bhakti','Pune'),(103,'Shreya','Nanded'),(104,'Pranit','Latur');
